<Window x:Class="Zad2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zad2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">
    <DockPanel LastChildFill="True" VerticalAlignment="Center">
        <Label Content="Введите фамилию" DockPanel.Dock="Top"/>
        <TextBox x:Name="FirstNameText" DockPanel.Dock="Top"/>
        <Label Content="Введите должность" DockPanel.Dock="Top"/>
        <TextBox x:Name="VocationText" DockPanel.Dock="Top"/>
        <Label Content="Введите оклад" DockPanel.Dock="Top"/>
        <TextBox x:Name="OkladText" DockPanel.Dock="Top"/>
        <Label Content="Введите рейтинг" DockPanel.Dock="Top"/>
        <TextBox x:Name="ScaleText" DockPanel.Dock="Top"/>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center">
            <Button Content="Оклад+15" Margin="10 0" Click="ButtonBase_OnClick1"></Button>
            <Button Content="Должность+" Click="ButtonBase_OnClick2"></Button>
            <Button Content="Оклад по рейтингу" Click="ButtonBase_OnClick3"></Button>
        </StackPanel>
        <TextBlock DockPanel.Dock="Bottom" x:Name="Result"/>
    </DockPanel>
</Window>
